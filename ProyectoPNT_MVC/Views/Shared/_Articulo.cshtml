@using Microsoft.AspNetCore.Http;


@model IEnumerable<ProyectoPNT_MVC.Models.Articulo>

@{
    var sesionUsuario = Html.ViewContext.HttpContext.Session.GetString("LoginUsuario");

    var esVisible = true;
    if (!String.IsNullOrEmpty(sesionUsuario))
    {
        esVisible = false;
    }

    @functions{
        public String seMuestra(Boolean esVisible)
        {
            String retorno = "display:block";
            if (!esVisible)
            {
                retorno = "display:none !important";
            }
            return retorno;
        }
    }
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numeroArticulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            <img src="@Url.Content(item.imagen)" height="150" ;>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.talle)
        </td>
        <td>
            <a style="@seMuestra(!esVisible)" asp-controller="Carrito" asp-action="crearCarrito" asp-route-id="@item.id" asp-route-idUser="@sesionUsuario">Agregar al Carrito</a>
        </td>
    </tr>
}